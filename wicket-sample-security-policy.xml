<project basedir="." default="all" name="Apache Fortress Policy">

    <taskdef classname="org.apache.directory.fortress.core.ant.FortressAntTask" name="FortressAdmin" >
        <classpath path="${java.class.path}"/>
    </taskdef>


    <target name="all">
        <FortressAdmin>

            <deluser>
                <user userId="wssuperuser"/>
                <user userId="wsuser1"/>
                <user userId="wsuser2"/>
                <user userId="wsuser3"/>
            </deluser>

            <adduser>
                <user userId="wssuperuser" password="password" description="Wicket Sample Demo Super User" ou="org.wicketsample.users" />
                <user userId="wsuser1" password="password" description="Wicket Sample User 1" ou="org.wicketsample.users" />
                <user userId="wsuser2" password="password" description="Wicket Sample User 2" ou="org.wicketsample.users" />
                <user userId="wsuser3" password="password" description="Wicket Sample User 3" ou="org.wicketsample.users" />
            </adduser>

            <deluserrole>
                <userrole userId="wsuser1" name="wsusers1role" />
                <userrole userId="wsuser2" name="wsusers2role" />
                <userrole userId="wsuser3" name="wsusers3role" />
                <userrole userId="wssuperuser" name="wssuperrole" />
            </deluserrole>

            <adduserrole>
                <userrole userId="wsuser1" name="wsusers1role" />
                <userrole userId="wsuser2" name="wsusers2role" />
                <userrole userId="wsuser3" name="wsusers3role" />
                <userrole userId="wssuperuser" name="wssuperrole" />
            </adduserrole>

            <delrole>
                <role name="wsBaseRole" />
                <role name="wsUsers1Role" />
                <role name="wsUsers2Role" />
                <role name="wsUsers3Role" />
                <role name="wsSuperRole" />
            </delrole>

            <addrole>
                <role name="wsBaseRole" description="Base Role gets you into the sample web app"/>
                <role name="wsUsers1Role" description="Grants access to page 1 and components"/>
                <role name="wsUsers2Role" description="Grants access to page 2 and components"/>
                <role name="wsUsers3Role" description="Grants access to page 3 and components"/>
                <role name="wsSuperRole" description="Inherits from the page roles, grants user to all pages, components in app"/>
            </addrole>

            <delroleinheritance>
                <relationship child="wsUsers1Role" parent="wsBaseRole"/>
                <relationship child="wsUsers2Role" parent="wsBaseRole"/>
                <relationship child="wsUsers3Role" parent="wsBaseRole"/>
                <relationship child="wsSuperRole" parent="wsUsers1Role"/>
                <relationship child="wsSuperRole" parent="wsUsers2Role"/>
                <relationship child="wsSuperRole" parent="wsUsers3Role"/>
            </delroleinheritance>

            <addroleinheritance>
                <relationship child="wsUsers1Role" parent="wsBaseRole"/>
                <relationship child="wsUsers2Role" parent="wsBaseRole"/>
                <relationship child="wsUsers3Role" parent="wsBaseRole"/>
                <relationship child="wsSuperRole" parent="wsUsers1Role"/>
                <relationship child="wsSuperRole" parent="wsUsers2Role"/>
                <relationship child="wsSuperRole" parent="wsUsers3Role"/>
            </addroleinheritance>

            <delpermobj>
                <permobj objName="Page1" />
                <permobj objName="Page2" />
                <permobj objName="Page3" />
            </delpermobj>

            <addpermobj>
                <permobj objName="Page1" description="Wicket Sample Test Page 1" ou="org.wicketsample.perms" />
                <permobj objName="Page2" description="Wicket Sample Test Page 2" ou="org.wicketsample.perms" />
                <permobj objName="Page3" description="Wicket Sample Test Page 3" ou="org.wicketsample.perms" />
            </addpermobj>

            <delpermop>
                <permop objName="Page1" opName="link" type="Button"/>
                <permop objName="Page2" opName="link" type="Button"/>
                <permop objName="Page3" opName="link" type="Button"/>
                <permop objName="Page1" opName="Button1"/>
                <permop objName="Page1" opName="Button2"/>
                <permop objName="Page1" opName="Button3"/>
                <permop objName="Page2" opName="Button1"/>
                <permop objName="Page2" opName="Button2"/>
                <permop objName="Page2" opName="Button3"/>
                <permop objName="Page3" opName="Button1"/>
                <permop objName="Page3" opName="Button2"/>
                <permop objName="Page3" opName="Button3"/>
            </delpermop>

            <addpermop>
                <permop objName="Page1" opName="link" />
                <permop objName="Page2" opName="link" />
                <permop objName="Page3" opName="link" />
                <permop objName="Page1" opName="Button1" />
                <permop objName="Page1" opName="Button2" />
                <permop objName="Page1" opName="Button3" />
                <permop objName="Page2" opName="Button1" />
                <permop objName="Page2" opName="Button2" />
                <permop objName="Page2" opName="Button3" />
                <permop objName="Page3" opName="Button1" />
                <permop objName="Page3" opName="Button2" />
                <permop objName="Page3" opName="Button3" />
            </addpermop>

            <delpermgrant>
                <permgrant objName="Page1" opName="link" roleNm="wsUsers1Role"/>
                <permgrant objName="Page2" opName="link" roleNm="wsUsers2Role"/>
                <permgrant objName="Page3" opName="link" roleNm="wsUsers3Role"/>
                <permgrant objName="Page1" opName="Button1" roleNm="wsUsers1Role"/>
                <permgrant objName="Page1" opName="Button2" roleNm="wsUsers1Role"/>
                <permgrant objName="Page1" opName="Button3" roleNm="wsUsers1Role"/>
                <permgrant objName="Page2" opName="Button1" roleNm="wsUsers2Role"/>
                <permgrant objName="Page2" opName="Button2" roleNm="wsUsers2Role"/>
                <permgrant objName="Page2" opName="Button3" roleNm="wsUsers2Role"/>
                <permgrant objName="Page3" opName="Button1" roleNm="wsUsers3Role"/>
                <permgrant objName="Page3" opName="Button2" roleNm="wsUsers3Role"/>
                <permgrant objName="Page3" opName="Button3" roleNm="wsUsers3Role"/>
            </delpermgrant>

            <addpermgrant>
                <permgrant objName="Page1" opName="link" roleNm="wsUsers1Role"/>
                <permgrant objName="Page2" opName="link" roleNm="wsUsers2Role"/>
                <permgrant objName="Page3" opName="link" roleNm="wsUsers3Role"/>
                <permgrant objName="Page1" opName="Button1" roleNm="wsUsers1Role"/>
                <permgrant objName="Page1" opName="Button2" roleNm="wsUsers1Role"/>
                <permgrant objName="Page1" opName="Button3" roleNm="wsUsers1Role"/>
                <permgrant objName="Page2" opName="Button1" roleNm="wsUsers2Role"/>
                <permgrant objName="Page2" opName="Button2" roleNm="wsUsers2Role"/>
                <permgrant objName="Page2" opName="Button3" roleNm="wsUsers2Role"/>
                <permgrant objName="Page3" opName="Button1" roleNm="wsUsers3Role"/>
                <permgrant objName="Page3" opName="Button2" roleNm="wsUsers3Role"/>
                <permgrant objName="Page3" opName="Button3" roleNm="wsUsers3Role"/>
            </addpermgrant>

            <delorgunit>
                <orgunit name="org.wicketsample.perms" typeName="PERM"/>
                <orgunit name="org.wicketsample.users" typeName="USER"/>
            </delorgunit>

            <addorgunit>
                <orgunit name="org.wicketsample.perms" typeName="PERM"/>
                <orgunit name="org.wicketsample.users" typeName="USER"/>
            </addorgunit>

        </FortressAdmin>
    </target>
</project>